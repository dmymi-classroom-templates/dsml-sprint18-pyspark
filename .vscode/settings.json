{
    "[python]": {
        "editor.formatOnSaveMode": "file",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "eeyore.yapf",
        "editor.formatOnType": false
    },
    "search.exclude": {
        "**/.git": true,
        "**/*.code-search": true,
        "**/venv": true,
        "**/output": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/venv/**": true,
        "**/output/**": true
    }
}